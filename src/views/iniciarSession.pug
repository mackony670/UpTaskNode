<!DOCTYPE html>
html(lang="en")
    head
        include parcials/header
   
    body.login
        .contenedor-formulario
            h1 Inicia Session en
                strong UpTask
            if error
                p.alerta.error= error
            
            form#formulario.caja.caja-login(method="POST" action="/iniciar-session")
                .campo
                    label(for='email') E-mail
                    input(type="email" name="email" placeholder="Coreo@coreo.com" required vlaue= email )
                    
                .campo
                    label(for='pasword') password
                    input(type="password" name="password" placeholder="Tu clave" required value= password )
                .campo.enviar
                    input.boton(type="submit" value="Iniciar Session") 
                .campo
                    a(href="/crear-cuenta") Registrate
        script(src="/dist/bundle.js")